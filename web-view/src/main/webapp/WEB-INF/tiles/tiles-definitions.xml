<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="defaultTemplate" template="/WEB-INF/template/default/template.jsp">
        <put-attribute name="header" value="/WEB-INF/template/default/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/template/default/footer.jsp"/>
    </definition>

    <definition name="manage" extends="defaultTemplate">
        <put-attribute name="current" value="manage"/>
    </definition>

    <definition name="manage/addRoom" extends="defaultTemplate">
        <put-attribute name="current" value="manage/addRoom"/>
    </definition>

    <definition name="manage/personal" extends="defaultTemplate">
        <put-attribute name="current" value="manage/personal"/>
    </definition>

    <definition name="manage/post" extends="defaultTemplate">
        <put-attribute name="current" value="manage/post"/>
    </definition>

    <definition name="manage/patient" extends="defaultTemplate">
        <put-attribute name="current" value="manage/patient"/>
    </definition>

    <definition name="manage/permit" extends="defaultTemplate">
        <put-attribute name="current" value="manage/permit"/>
    </definition>

    <definition name="manage/permitStats" extends="defaultTemplate">
        <put-attribute name="current" value="manage/permitStats"/>
    </definition>

</tiles-definitions>